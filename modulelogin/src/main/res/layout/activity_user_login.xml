<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/src_white"
    android:focusableInTouchMode="true"
    android:paddingStart="15dp"
    android:fitsSystemWindows="true"
    android:paddingEnd="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <pl.droidsonroids.gif.GifImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/horse" />


<!--            <View-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="0.1dp"-->
<!--                android:layout_weight="1" />-->

<!--            <FrameLayout-->
<!--                android:id="@+id/register_fl"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center"-->
<!--                android:padding="5dp"-->
<!--                android:visibility="invisible">-->

<!--                <TextView-->
<!--                    android:id="@+id/user_register_tv"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:gravity="center"-->
<!--                    android:textColor="@color/src_text_c1"-->
<!--                    android:textSize="14sp" />-->

<!--            </FrameLayout>-->

        </LinearLayout>

        <FrameLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/user_login_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/src_text_c1"
                android:textSize="25sp" />

            <ImageView
                android:id="@+id/user_login_logo_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/icon_login_logo" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:hint="输入邮箱/手机号"
                    android:id="@+id/user_name_edt"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:singleLine="true"
                    android:textColorHint="@color/src_text_c2"
                    android:textSize="@dimen/src_font_18" />

                <FrameLayout
                    android:id="@+id/delete_user_fl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="3dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:scaleX="0.7"
                        android:scaleY="0.7"
                        android:src="@mipmap/icon_login_delete" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/usual_user_fl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="3dp"
                    android:layout_marginStart="5dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/usual_user_iv"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:rotation="90"
                        android:src="@mipmap/icon_arrow_right" />

                </FrameLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/src_line_c9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <EditText
                    android:hint="输入密码"
                    android:id="@+id/user_pwd_edt"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:singleLine="true"
                    android:textColorHint="@color/src_text_c2"
                    android:imeOptions="actionDone"
                    android:textSize="@dimen/src_font_18" />

                <FrameLayout
                    android:id="@+id/delete_pwd_fl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:padding="3dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"
                        android:scaleX="0.7"
                        android:scaleY="0.7"
                        android:src="@mipmap/icon_login_delete" />

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/password_eye_fl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="2dp">

                    <ImageView
                        android:id="@+id/password_eye_iv"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/icon_login_hide" />

                </FrameLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/src_line_c9" />

        </LinearLayout>

        <TextView
            android:id="@+id/pwd_tips_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/src_line_c9"
            android:textSize="@dimen/src_font_11"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/forget_password_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:text="忘记密码"
                    android:id="@+id/user_login_forget_pwd_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/src_c1"
                    android:textSize="@dimen/src_font_14" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/register_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:text="注册"
                    android:id="@+id/user_login_register_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/src_c1"
                    android:textSize="@dimen/src_font_14" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:text="确定"
            android:id="@+id/confirm_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:layout_marginTop="16dp"
            android:background="@color/src_c1"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="@color/src_white"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/remember_password_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <ImageView
                android:id="@+id/remember_password_iv"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:padding="2dp"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/common_utils_default_padding_8"/>

            <TextView
                android:text="记住登录密码"
                android:id="@+id/remember_password_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/src_text_c2"
                android:textSize="@dimen/src_font_12" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingTop="5dp">

        <LinearLayout
            android:id="@+id/other_login_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/src_line_c9" />

                <TextView
                    android:text="其他方式登录"
                    android:id="@+id/user_login_type_other_login_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:gravity="center"
                    android:textColor="@color/src_text_c2"
                    android:textSize="@dimen/src_font_14" />


                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/src_line_c9" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/third_login_recycler_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:layout_gravity="center">
                </android.support.v7.widget.RecyclerView>

            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/src_white" />

            <LinearLayout
                android:id="@+id/try_one_down_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:text="体验一下"
                    android:id="@+id/try_one_down_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/src_text_c2"
                    android:textSize="@dimen/src_font_14" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@color/src_white" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>